<?xml version="1.0" encoding="utf-8"?>
<com.gan.base.view.DragLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/dp30"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp50" >

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp15"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_bottom"
                android:layout_width="@dimen/dp70"
                android:layout_height="@dimen/dp70"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp20"
                android:text="@string/app_name"
                android:textColor="#ffffff"
                android:textSize="22sp" />
        </LinearLayout>
        <View android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/theme_border_bg"/>
        <ListView
            android:id="@+id/lv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:cacheColorHint="@color/clear"
            android:divider="@color/theme_border_bg"
            android:dividerHeight="1px"
            android:listSelector="@color/clear"
            android:textColor="#ffffff" />
        <Button
            android:id="@+id/btn_exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="退出"
            android:textColor="@color/theme_text_white"
            style="@style/first_title_white" />


    </LinearLayout>

    <com.gan.base.view.SlideLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/theme_blank_bg"
        android:orientation="vertical" >

        <com.gan.base.view.NoScrollViewPager
            android:id="@+id/vp_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        </com.gan.base.view.NoScrollViewPager>
        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/theme_border_bg"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.gan.base.view.TabIndicatorView
                android:id="@+id/rb_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <com.gan.base.view.TabIndicatorView
                android:id="@+id/rb_friend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <com.gan.base.view.TabIndicatorView
                android:id="@+id/rb_me"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>
    </com.gan.base.view.SlideLayout>

</com.gan.base.view.DragLayout>
